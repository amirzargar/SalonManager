@model SalonManager.Models.Booking
@{
    ViewData["Title"] = "Delete Booking";
}

<h1>Delete Booking</h1>
<h3>Are you sure you want to delete this?</h3>

<div>
    <h4>Booking Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ServiceId)
        </dt>
        <dd class="col-sm-10">
            @(Model.Service != null ? Model.Service.Name : "N/A")
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StaffId)
        </dt>
        <dd class="col-sm-10">
            @(Model.Staff != null ? Model.Staff.Name : "N/A")
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StartAt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StartAt)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EndAt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EndAt)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Notes)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Notes)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Customer)
        </dt>
        <dd class="col-sm-10">
            @(Model.Customer != null ? Model.Customer.Email : "N/A")
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button> |
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
